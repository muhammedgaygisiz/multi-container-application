{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "mgaygisiz/multi-container-application-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "mgaygisiz/multi-container-application-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "mgaygisiz/multi-container-application-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "mgaygisiz/multi-container-application-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPost": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "client", "server"
      ]
    }
  ]
}